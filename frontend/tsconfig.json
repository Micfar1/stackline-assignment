{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "nodenext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": [
    "./types/*.d.ts",
    "src/**/*"
  ]
}
